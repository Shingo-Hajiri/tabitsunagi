<%= content_for(:title, t('.title')) %>
<div class="py-0 px-5 my-0 mx-auto max-w-screen-xl">
  <h1 class="text-accent-blue font-bold pt-3 mb-0 mx-auto text-center text-xl"><%= t('.title') %></h1>

  <%= form_with model: @user, url: password_path(resource_name), method: :put, local: true do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="pt-10 sm:mx-32">
      <%= f.label :password, "新しいパスワード" %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> <%= t('.minimum_password_length') %>)</em>
      <% end %>
      <label class="input input-bordered flex items-center gap-2 bg-white">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 16 16"
        fill="currentColor"
        class="h-4 w-4 opacity-70">
        <path
          fill-rule="evenodd"
          d="M14 6a4 4 0 0 1-4.899 3.899l-1.955 1.955a.5.5 0 0 1-.353.146H5v1.5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1-.5-.5v-2.293a.5.5 0 0 1 .146-.353l3.955-3.955A4 4 0 1 1 14 6Zm-4-2a.75.75 0 0 0 0 1.5.5.5 0 0 1 .5.5.75.75 0 0 0 1.5 0 2 2 0 0 0-2-2Z"
          clip-rule="evenodd" />
      </svg>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
      </label>
    </div>

    <div class="pt-10 sm:mx-32">
      <%= f.label :password_confirmation, t('.confirm_new_password') %>
      <label class="input input-bordered flex items-center gap-2 bg-white">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 16 16"
        fill="currentColor"
        class="h-4 w-4 opacity-70">
        <path
          fill-rule="evenodd"
          d="M14 6a4 4 0 0 1-4.899 3.899l-1.955 1.955a.5.5 0 0 1-.353.146H5v1.5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1-.5-.5v-2.293a.5.5 0 0 1 .146-.353l3.955-3.955A4 4 0 1 1 14 6Zm-4-2a.75.75 0 0 0 0 1.5.5.5 0 0 1 .5.5.75.75 0 0 0 1.5 0 2 2 0 0 0-2-2Z"
          clip-rule="evenodd" />
      </svg>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </label>
    </div>

    <div class="pt-10 text-center">
      <button class="btn bg-main-orange text-white px-20 mb-10 hover:bg-main-orange hover:opacity-50">
        <%= f.submit t('.button') %>
      </button>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
