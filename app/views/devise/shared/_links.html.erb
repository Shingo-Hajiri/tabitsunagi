<%- if controller_name != 'sessions' %>
  <div class="text-center mb-10">
    <%= link_to t('.sign_in'), new_session_path(resource_name), class: "text-accent-blue font-bold hover:opacity-75" %><br />
  </div>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <div class="text-center mb-10">
    <%= link_to t('.sign_up'), new_registration_path(resource_name), class: "text-accent-blue font-bold hover:opacity-75" %><br />
  </div>
<% end %>


<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <div class="text-center mb-10">
    <%= link_to t('.forgot_your_password'), new_password_path(resource_name), class: "text-accent-blue font-bold hover:opacity-75" %><br />
  </div>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <div class="text-center mb-10" style='display: none;'>
    <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "text-accent-blue font-bold hover:opacity-75" %><br />
  </div>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <div class="text-center mb-10">
    <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "text-accent-blue font-bold hover:opacity-75" %><br />
  </div>
<% end %>
